<% if flash[:alert] %>
  <div class="col-md-6 offset-md-3 mt-3">
    <div class="alert alert-danger" role="alert">
      <%= flash.now[:alert] %>
      <% flash[:alert] = nil %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  </div>
<% end %>
<% if @hash.nil? %>
  <h2 class = "text-center mt-5" >エリア検索</h2>
  <div class = "col-md-6 offset-md-3">
    <%= form_with local: true do |form| %>
      <%= form.label :zipcode, "郵便番号で検索" %>
      <%= form.text_field :zipcode, class: "form-control" %>
      <%= form.submit "検索する", class: "btn btn-primary col-md-12 mt-3"%>
    <% end %>
  </div>
<% else %>
  <h3 class = "text-center mt-5">エリア登録</h3>
  <div class="form-group col-md-4 offset-md-4">
    <%= form_with model: @area, local: true, url: '/areas' do |form| %>
      <%= form.label :zipcode %>
      <%= form.text_field :zipcode, class: "form-control", value: @zipcode, readonly: true %>
      <%= form.label :prefcode %>
      <%= form.text_field :prefcode, class: "form-control", value: @prefcode, readonly: true %>        
      <%= form.label :address1 %>
      <%= form.text_field :address1, class: "form-control", value: @address1, readonly: true %>
      <%= form.label :kana1 %>
      <%= form.text_field :kana1, class: "form-control", value: @kana1, readonly: true%>
      <%= form.label :address2 %>
      <%= form.text_field :address2, class: "form-control", value: @address2, readonly: true %>
      <%= form.label :kana2 %>
      <%= form.text_field :kana2, class: "form-control", value: @kana2, readonly: true %>
      <%= form.label :address3 %>
      <%= form.text_field :address3, class: "form-control", value: @address3, readonly: true%>
      <%= form.label :kana3 %>        
      <%= form.text_field :kana3, class: "form-control", value: @kana3, readonly: true %>
      <%= form.label :introduction %>
      <%= form.text_area :introduction, class: "form-control" %>
      <%= form.submit "登録する", class:"btn btn-primary col-md-12 mt-3" %>
    <% end %>
  </div>
  <% @flag = 1%>
<% end %>

